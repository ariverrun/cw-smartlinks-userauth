extends: default
ignore:
  - vendor
  - doc
  - .github
rules:
  braces:
    min-spaces-inside: 1
    max-spaces-inside: 1
  brackets:
    max-spaces-inside: 0
  line-length:
    max: 300
  indentation:
    spaces: consistent
    indent-sequences: true
  comments:
    require-starting-space: true
    min-spaces-from-content: 0
  document-start:
    present: false
  empty-lines:
    max: 1
